<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/pbCargar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        style="?android:attr/progressBarStyleLarge"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/circular_progress_bar"
        android:visibility="visible"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/tvMensajeCargando"
        style="@style/EstiloTextoContenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pbCargar"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColor="@color/verde" />

    <TextView
        android:id="@+id/tvMensajeCarga"
        style="@style/EstiloTextoTitoloActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMensajeAdvertenciaConexion"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:padding="5dp"
        android:textColor="@color/blanco" />

    <Button
        android:visibility="gone"
        style="@style/EstiloBotones"
        android:text="@string/titulo_salir_mayuscula"
        android:id="@+id/btnSalir"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMensajeCarga"
        android:layout_centerHorizontal="true" />
</RelativeLayout>