<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/pbReciboWeb"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            style="?android:attr/progressBarStyleLarge"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/circular_progress_bar"
            android:visibility="visible"
            android:layout_marginTop="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tvMensajeFase"
            style="@style/EstiloTextoTitoloActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvMensajeCargando"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:gravity="left"/>

        <TextView
            android:id="@+id/tvMensajeCargando"
            style="@style/EstiloTextoContenido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pbReciboWebpbReciboWeb"
            android:layout_margin="10dp"
            android:gravity="left"
            android:textColor="@color/verde" />

        <TextView
            android:id="@+id/tvMensajeAdvertenciaConexion"
            style="@style/EstiloTextoContenido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pbReciboWeb"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="@string/mensaje_carga_no_desconecte"
            android:background="@color/rojo"
            android:textColor="@color/blanco" />

        <TextView
            android:id="@+id/tvMensajeCarga"
            style="@style/EstiloTextoTitoloActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvMensajeFase"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:padding="5dp"
            android:textColor="@color/blanco" />

    </LinearLayout>
</RelativeLayout>