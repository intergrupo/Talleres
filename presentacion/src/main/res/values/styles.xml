<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/verdeoscuro</item>
        <item name="android:colorBackground">@color/grisfondo</item>
    </style>

    <style name="MyNoActionBarShadowTheme" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Dialog.NoActionBar" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grisclaro</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="EstiloTextoTitulo" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/negro</item>
        <item name="android:fontFamily">roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/longitud_tipo_letra_grande</item>
    </style>

    <style name="EstiloTextoContenido" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/negro</item>
        <item name="android:fontFamily">roboto</item>
        <item name="android:textSize">@dimen/longitud_tipo_letra_grande</item>
    </style>

    <style name="EstiloTextoTitoloActivity" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/negro</item>
        <item name="android:fontFamily">roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">@dimen/longitud_tipo_letra_grande</item>
    </style>

    <style name="EstiloTextoTituloDialog" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/negro</item>
        <item name="android:fontFamily">roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">@dimen/longitud_tipo_letra_grande2</item>
    </style>

    <style name="EstiloTextoBotones" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/negro</item>
        <item name="android:fontFamily">roboto</item>
        <item name="android:textSize">@dimen/longitud_tipo_letra_peque√±a</item>
    </style>

    <style name="EstiloBotones">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">roboto</item>
        <item name="android:textColor">@color/verdeoscuro</item>
        <item name="android:textSize">@dimen/longitud_tipo_letra_grande</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EstiloTextoMensaje" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/negro</item>
        <item name="android:fontFamily">roboto</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:height">100dp</item>
        <item name="android:textSize">@dimen/longitud_tipo_letra_grande</item>
    </style>

    <style name="EstiloTextoCaptura" parent="@style/EstiloTextoContenido"></style>

    <style name="Separador">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grisclaro</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppThemePopup.base" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppThemePopup" parent="AppThemePopup.base" />

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/blanco</item>
    </style>


</resources>
